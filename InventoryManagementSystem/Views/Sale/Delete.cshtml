<div>
    <h4>Sale</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Purchased Product")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Sale_prod)
        </dd>

        <dt>
            @Html.DisplayName("Purchased Quantity")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Sale_qnty)
